{
  "name": "maisoncleo",
  "version": "1.0.0",
  "description": "Système de gestion de production Maison Cléo - Frontend React + Backend MongoDB",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["maisoncleo", "production", "react", "mongodb", "api"],
  "author": "Maison Cléo",
  "license": "MIT"
}
