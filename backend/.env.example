# Variables d'environnement backend Maison Cléo

# MongoDB Atlas (obligatoire)
MONGO_URI=

# Port local (facultatif)
PORT=3001

# Frontend origin (URL complète)
VITE_FRONTEND_ORIGIN=http://localhost:5173
# Optionnel: liste d'origines séparées par des virgules
VITE_FRONTEND_ORIGINS=

# WooCommerce / WordPress (si utilisé)
VITE_WORDPRESS_URL=https://maisoncleo.com
VITE_WORDPRESS_CONSUMER_KEY=
VITE_WORDPRESS_CONSUMER_SECRET=
VITE_WORDPRESS_API_VERSION=wc/v3

# Mot de passe initial (optionnel)
INIT_APP_PASSWORD=

# Secret cookies (obligatoire en prod)
APP_AUTH_SECRET=
